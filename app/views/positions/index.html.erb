<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to '<i class="fas fa-eye"></i>'.html_safe, position, :class => 'btn btn-primary' %>
            <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_position_path(position), :class => 'btn btn-success' %>
            <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, position, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Position', new_position_path, :class => 'btn btn-primary' %>
