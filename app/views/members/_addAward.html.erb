<%= simple_form_for(Award.new) do |f| %>

<div class="form-inputs">
    <div class="row">
    <div class="col-md-6">
        <%= f.input :name %>
    </div>
    <div class="col-md-6">
        <%= f.input :year, start_year: Time.now.year - 25, order: [:year] %>
    </div>
    <%= f.hidden_field :member_id, :value => @member.id %>
    </div>
</div>

<div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#addAward" aria-expanded="false" aria-controls="addExpCollapse">
    Close
    </button>
</div>
<% end %>