<div class="jumbotron">
  <h1 class="display-4 text-center">Log in</h1>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 text-center">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        html: {class: 'form-signin'}) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email',
            input_html:{class:'form-control'}%>
            <%= f.input :password, required: false, label: false, placeholder: 'Password',
            input_html:{class:'form-control'}%>
          </div>

          <form>
            <div class="form-row">
              <div class="col-md-12">
                <label class="sr-only" for="inlineFormInputGroup">Username</label>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-credit-card"></i></div>
                  </div>
                  <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Card number">
                </div>
              </div>
              <div class="col-md-8">
                <label class="sr-only" for="inlineFormInputGroup">Username</label>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-calendar-day"></i></div>
                  </div>
                  <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="mm/yyyy">
                </div>
              </div>
              <div class="col-md-4">
                <label class="sr-only" for="inlineFormInputGroup">PIN</label>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-ellipsis-h"></i></div>
                  </div>
                  <input type="password" class="form-control" id="inlineFormInputGroup" placeholder="NIP">
                </div>
              </div>
            </div>
          </form>
          <br>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class:'btn btn-primary btn-lg' %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
        
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>